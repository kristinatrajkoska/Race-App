<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkish"
    tools:context=".Welcome">

    <!-- prvo tekstce obicno ne klavam nis-->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the F1 World!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/infoText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp" />

    <!-- isto basic text -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get the latest updates on F1 races, drivers, and standings!"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGray"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/greetingText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

    <!-- slikata obicna dovolno -->
    <ImageView
        android:id="@+id/funImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/card_back"
        app:layout_constraintTop_toBottomOf="@+id/infoText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
     />
    <!-- tekstot za da ne vodi do igrite SO pozadina ne zaboravaj -->
    <TextView
        android:id="@+id/funText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for some F1 fun"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/square_background"
        app:layout_constraintTop_toBottomOf="@+id/funImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:textStyle="bold"/>


    <!-- Site deloj od menito ama vo Layouts mesani-->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/darkRed"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/races"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Races"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drivers"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Standings Menu so popot -->
        <LinearLayout
            android:id="@+id/standings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standings"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
